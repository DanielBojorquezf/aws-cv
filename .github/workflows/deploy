name: ci/cd workflow

on:
  push:
    branches:
      - master
  pull_request:

jobs:

  deploy-uat:
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/master'
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Setup Node
        uses: actions/setup-node@v1

      - name: Install dependencies
        run: npm install

      - name: Check files
        run: ls -lah

      - name: Copy dotenv file
        run: php -r "file_put_contents(__DIR__ . '/.env', '${{ secrets.UAT_UPG_DOTENV }}');"

      - name: Read .env file
        run: cat .env

      - name: Build Svelte App
        run: npm run build

      - name: Check built files
        run: ls -lah dist

      - name: Configure AWS credentials from Test account
        uses: aws-actions/configure-aws-credentials@v1
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}

      - name: Deploy to Bucket
        run:  |
          aws s3 sync ./public/ ${{ secrets.BUCKET_NAME_UAT }} --exclude ".env" --exclude '.git*' --exclude 'package.*' --exclude '*.md' --exclude 'src' --exclude '.editorconfig' --exclude 'scripts'

      - name: Invalidate CloudFront
        uses: chetan/invalidate-cloudfront-action@v2
        env:
          DISTRIBUTION: ${{ secrets.DISTRIBUTION_NAME_UAT }}
          PATHS: "/*"
          AWS_REGION: ${{ secrets.AWS_REGION }}
          AWS_ACCESS_KEY_ID: ${{ secrets.AWS_ACCESS_KEY_ID }}
          AWS_SECRET_ACCESS_KEY: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
